{
    "compilerOptions": {
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "module": "esnext",
      "moduleResolution": "node",
      "noEmit": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "rootDir": "src",
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },
      "plugins": [{
        "name": "typescript-styled-plugin",
        "validate": false
      }],
      "resolveJsonModule": true,
      "skipLibCheck": true,
      // "strict": true,
      // "strictPropertyInitialization": true,
      "target": "ES2018"
    },
    "include": [
      "src"
    ]
}